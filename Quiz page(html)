    }

    /* You can also specify styles for specific elements if needed */
    h2, p {
        color: black;
    }

    .correct {
        color: green;
        font-weight: bold;
    }

    .incorrect {
        color: red;
        font-weight: bold;
    }
    #start-page img {
        display: block;
        margin: auto;
    }
    .progress-bar-container {
        width: 100%;
        background-color: #ddd;
        height: 20px;
        margin-top: 10px;
        border-radius: 10px;
        overflow: hidden;
    }
    #timer {
        margin-left: 20px;
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #ddd;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 14px;
        font-weight: bold;
    }   

    .progress-bar {
        width: 0;
        height: 100%;
        background-color: #4CAF50;
        transition: width 0.5s;
    }

    /* Style for the questions */
    #question-page h2#question-text {
        font-family: 'Poppins', sans-serif; /* Change font to Poppins or a similar web font */
        font-size: 20px; /* Adjust the font size here */
    }

    #question-page label {
        font-size: 18px; /* Adjust the font size for options here */
    }

